<div class="card center_login">
  <h2>Entrar no Poster</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <br />
      <%= f.email_field :email, placeholder: "E-mail", autofocus: true, autocomplete: "email", :class => "form-control" %>
    </div>

    <div class="field">
      <br />
      <%= f.password_field :password, placeholder: "Senha", autocomplete: "current-password", :class => "form-control" %>
    </div>

    <br>

    <div class="actions">
      <%= f.submit "Entrar", :class => "btn btn-primary" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>