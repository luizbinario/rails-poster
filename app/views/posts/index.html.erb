<div class="card">
	<div class="card-header">
    	<center><h1>Posts</h1></center>
    </div>
    <div class="card-body">
		<div class="center_post">
		    <%= form_with scope: :post, url: user_posts_path, loca: true do |form| %>
		    <%= form.text_area :body, placeholder: "O que estÃ¡ acontecendo?", :class => "form-control border-0" %><br>
			<%= form.submit "Salvar Post", :class => "btn btn-primary right margin-5" %>
			<div class="clear"></div>
		    <% end %>
		</div>
		<div class="post_area">
			<% @posts.each do |post|%>
				<hr>
				<p><small><b><%= link_to post.user.name, user_path(post.user) %></b></small> . <small class="text-muted"><%= post.created_at %></small></p>
				<b><%= post.body %></b>
			<% end %>
		</div>
	</div>
</div>