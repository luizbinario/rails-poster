<div class="logo">
    <h1>New Post</h1>
</div>
<div class="card">
    <%= form_with scope: :post, url: posts_path, local: true do |form| %>
	<p>
	    <%= form.label :text, "Texto" %><br>
	    <%= form.text_area :text %>
	</p>
    
        <p>
	   <%= form.submit "Salvar Post", :class => "btn btn-primary" %>
	</p>
    <% end %>
</div>
<% @posts.each do |post| %>
	<div class="center_post">
		<p><%= post.text %></p>
		<b><%= post.user %></b>
	</div>
<% end %>
